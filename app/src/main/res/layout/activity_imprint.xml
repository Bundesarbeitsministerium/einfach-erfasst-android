<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_background">
    <include android:id="@+id/topbar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             layout="@layout/fragment_topbar"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topbar"
                android:layout_above="@+id/tabbar">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/c_background"
                      android:padding="20dp">
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="start"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/aimp_title"
                                                        style="@style/c_title"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginBottom="20dp"
                  style="@style/c_divider"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/aimp_text_h_0"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="@string/aimp_text_p_0_0"
                                                        style="@style/c_text_p"/>
            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="-20dp"
                          android:layout_marginBottom="20dp">
                <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginRight="10dp"
                                                            android:layout_marginEnd="10dp"
                                                            android:text="@string/aimp_text_p_0_1"
                                                            style="@style/c_text_p"/>
                <de.bmas.einfach_erfasst.views.FontTextView android:id="@+id/aimp_text_a_0_1"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="@string/aimp_text_a_0_1"
                                                            style="@style/c_text_a"/>
            </LinearLayout>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/aimp_text_h_1"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:id="@+id/aimp_text_a_1"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/aimp_text_a_1"
                                                        style="@style/c_text_a"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="N/A"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="N/A"
                                                        style="@style/c_text_p"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginRight="10dp"
                                                        android:layout_marginEnd="10dp"
                                                        android:text="N/A"
                                                        style="@style/c_text_p"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:id="@+id/aimp_text_a_2_1"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="N/A"
                                                        style="@style/c_text_a"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginRight="10dp"
                                                        android:layout_marginEnd="10dp"
                                                        android:text="N/A"
                                                        style="@style/c_text_p"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:id="@+id/aimp_text_a_2_2"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="N/A"
                                                        style="@style/c_text_a"/>
        </LinearLayout>
    </ScrollView>
    <include android:id="@+id/tabbar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             layout="@layout/fragment_tabbar_3"/>
</RelativeLayout>
